{
  "app-id": "io.github.GNUfault.tuxanci",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "tuxanci",
  "finish-args": [
    "--socket=x11",
    "--device=dri",
    "--socket=pulseaudio",
    "--filesystem=home/.tuxanci:create",
    "--share=network"
  ],
  "modules": [
    {
      "name": "libzip",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "archive",
          "url": "https://libzip.org/download/libzip-1.10.1.tar.gz",
          "sha256": "9669ae5dfe3ac5b3897536dc8466a874c8cf2c0e3b1fdd08d75b273884299363"
        }
      ]
    },
    {
      "name": "SDL2_image",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.libsdl.org/projects/SDL_image/release/SDL2_image-2.8.2.tar.gz",
          "sha256": "8f486bbfbcf8464dd58c9e5d93394ab0255ce68b51c5a966a918244820a76ddc"
        }
      ]
    },
    {
      "name": "SDL2_ttf",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.libsdl.org/projects/SDL_ttf/release/SDL2_ttf-2.22.0.tar.gz",
          "sha256": "d48cbd1ce475b9e178206bf3b72d56b66d84d44f64ac05803328396234d67723"
        }
      ]
    },
    {
      "name": "tuxanci",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/app"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        }
      ],
      "post-install": [
        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "cp /app/share/pixmaps/io.github.GNUfault.tuxanci.svg /app/share/icons/hicolor/scalable/apps/io.github.GNUfault.tuxanci.svg"
      ]
    },
    {
      "name": "metainfo",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/metainfo",
        "cp io.github.GNUfault.tuxanci.metainfo.xml /app/share/metainfo/io.github.GNUfault.tuxanci.metainfo.xml"
      ],
      "sources": [
        {
          "type": "file",
          "path": "io.github.GNUfault.tuxanci.metainfo.xml"
        }
      ]
    }
  ]
}